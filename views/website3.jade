    // About Section
    section#about.success
      .container
        .row
          .col-lg-12.text-center
            h2 About
            hr.star-light
        .row
          .col-lg-4.col-lg-offset-2
            p#aboutUs
              | #{about_us}
          .col-lg-4
            p#whatWeDo
              | #{what_we_do}
    // Contact Section
    section#why-choose-us
      .container
        .row
          .col-lg-12.text-center
            h2 Why Choose Us?
            hr.star-primary
        .row
          .col-lg-4.col-lg-offset-2
            p#whyChooseUs
              | #{why_choose_us}
          .col-lg-4
            p#careers
              | #{careers}
    // Footer
    footer.text-center
      .footer-above
        .container
          .row
            .col-md-4.col-md-offset-4
              h3 History 
              p#ourHistory
                | #{our_history}
      .footer-below
        .container
          .row
            .col-lg-12
              | Copyright #{name} 2015
    // Scroll to Top Button (Only visible on small and extra-small screen sizes)
