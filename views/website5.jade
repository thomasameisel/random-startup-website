doctype
html
  head
    title #{name}

  body(style="background-image: url(" + images[0] + ")")
    header
      link(href='/stylesheets/website5.css', rel='stylesheet')

      h1
        script(type="text/javascript", src="https://raw.github.com/Stuk/jszip/master/jszip.js")
        script(type="text/javascript", src="js/download.js")
        script(type="text/javascript").
          function blink() {
          var blinks = document.getElementsByTagName('blink');
          for (var i = blinks.length - 1; i >= 0; i--) {
          var s = blinks[i];
          s.style.visibility = (s.style.visibility === 'visible') ? 'hidden' : 'visible';
          }
          window.setTimeout(blink, 100);
          }
          if (document.addEventListener) document.addEventListener("DOMContentLoaded", blink, false);
          else if (window.addEventListener) window.addEventListener("load", blink, false);
          else if (window.attachEvent) window.attachEvent("onload", blink);
          else window.onload = blink;
        blink #{name}
        audio(src='/music/good_enough.mp3', controls='')
    .container
      .main-content
        h2 About Us 
          h3
            ul
              li #{about_us} 
        h2 What We Do
          h3
            ul
              li #{what_we_do}
              li #{slogan}
        h2 Why Choose Us
          h3
            ul
              li #{why_choose_us}
        h2 Our History
          h3
            ul
              li #{our_history}
        h2 Careers
          h3
            ul
              li #{careers}

        .button
          button#download(onclick='download("website5")', style="position:fixed; bottom:0; right:0;") Download Website

